#!/bin/bash

set -eo pipefail

source cargo-cross-env

export CARGO_INSTALL_ROOT=/usr/local/rust-sdk

cargo install \
    cargo-audit \
    cargo-cache \
    cargo-edit \
    cargo-udeps \
    dotenvy \
    sccache

cargo install \
    --no-default-features \
    --features postgres \
    diesel_cli@1.4.1
