#!/bin/bash

set -eo pipefail

cargo install \
    cargo-audit \
    cargo-cache \
    cargo-edit \
    cargo-llvm-cov \
    cargo-nextest \
    cargo-udeps

cargo install \
    --no-default-features \
    --features postgres \
    diesel_cli@1.4.1

cargo install \
    --features cli \
    dotenvy

cargo install \
    --git https://github.com/mozilla/sccache.git \
    --rev 1def7430caf9a5d3d8812df92d24527866c7a27d \
    --features gha \
    sccache
